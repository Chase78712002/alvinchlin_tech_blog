<div class="flex flex-col">
  <h1 class="mb-8 self-center font-bold text-4xl">Log In</h1>
  <%= form_with url: login_path, class: "flex flex-col m-4 p-4 border border-white rounded-2xl" do |f| %>
    <div class="m-2 p-2 flex flex-col">
      <%= f.label :username, class: "m-2" %>
      <%= f.text_field :username, class: "m-2 p-2 border border-white rounded-md" %>
    </div>

    <div class="m-2 p-2 flex flex-col">
      <%= f.label :password, class: "m-2" %>
      <%= f.password_field :password, class: "m-2 p-2 border border-white rounded-md" %>
    </div>

    <%= f.submit "Log In",
             class:
               "w-2/3 self-center m-2 p-2 border rounded-md bg-white hover:bg-green-500 border-green-500 hover:border-slate-400 text-green-500 hover:text-white" %>
  <% end %>
</div>
