<% content_for :title, "Posts" %>

<div class="flex flex-col items-center space-y-2">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="width-full flex justify-center">
    <h1 class="font-bold text-4xl mb-2">Posts</h1>
    <%= link_to "New post",
    new_post_path,
    class:
      "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium absolute right-10" %>
  </div>

  <div id="posts" class="min-w-full mt-6jdivide-y divide-gray-200 space-y-5">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div
          class="
            flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0
          "
        >
          <%= render "list_item_container", post: post %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No posts found.</p>
    <% end %>
  </div>
</div>
