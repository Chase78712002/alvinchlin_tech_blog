<% content_for :title, "Drafts" %>

<div class="flex flex-col items-center space-y-2">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="width-full flex justify-center">
    <h1 class="font-bold text-4xl mb-2">Drafts</h1>
    <%= link_to new_post_path,
    class:
      "rounded-full w-10 h-10 flex items-center justify-center z-50 bg-blue-600 hover:bg-blue-500 text-white block font-medium fixed top-2 right-2" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        class="w-8 h-10"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 4.5v15m7.5-7.5h-15"
        />
      </svg>
    <% end %>
  </div>

  <div id="posts" class="min-w-full mt-6jdivide-y divide-gray-200 space-y-5">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div
          class="
            flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0
          "
        >
          <%= render "list_item_container", post: post %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No posts found.</p>
    <% end %>
  </div>
</div>
